<p id="notice"><%= notice %></p>

<div class="col-md-9">
        <table class="manage-table responsive-table">
          <tbody>
          <tr>
            <th>Property</th>
            <th>Date</th>
            <th>Action</th>
          </tr>

          <h3><%= will_paginate @properties %></h3>
          <!-- Item #1 -->
          <% @properties.each do |property| %>
      
          <tr>
            
            <td class="utf-title-container"> <%= image_tag property.image.url %>
              <div class="title">
                <h4>  <%= link_to  property.name, edit_property_path(property)  %>  </h4>
                <span><%= property.address %> </span>
                <span class="table-property-price">$ <%= property.price %>/mo</span> 
			        </div>
		      	</td>
            
            <td class="utf-expire-date"> <%= property.created_at.to_formatted_s(:long_ordinal)  %> </td>
            
            <td class="action">
			       <%= link_to 'Show', property, class: 'view tooltip left' %> <i class="fe icon-feather-eye"></i> 
			       <%= link_to 'Edit', edit_property_path(property), class: 'edit tooltip left' %><i class="fe icon-feather-edit"></i> 
			       <%= link_to 'Destroy', property, class: 'delete tooltip left', method: :delete, data: { confirm: 'Are you sure?' } %><i class="fe icon-feather-trash-2"></i>
            </td>

          </tr>
     
        <% end %>
        </tbody>
        
        </table>
        <%= link_to 'Add New Property', new_property_path, class: 'utf-centered-button margin-top-30 button' %>
        
	  </div>

    




