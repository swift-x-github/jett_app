<p id="notice"><%= notice %></p>


<div class = "container">
<h1>Agents</h1>
<table class= "table">
  <thead>
    <tr>
      <th>Shortname</th>
      <th>Fullname</th>
      <th>Description</th>
      <th>Address</th>
      <th>Email</th>
      <th>Website</th>
      <th>Tel</th>
      <th>Country</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agents.each do |agent| %>
      <tr>
        <td><%= agent.shortname %></td>
        <td><%= agent.fullname %></td>
        <td><%= agent.description %></td>
        <td><%= agent.address %></td>
        <td><%= agent.email %></td>
        <td><%= agent.website %></td>
        <td><%= agent.tel %></td>
        <td><%= agent.country_id %></td>
        
        <td><%= link_to 'Show', agent %></td>
         <% if account_signed_in? %>
            <td><%= link_to 'Edit', edit_agent_path(agent) %></td>
            <td><%= link_to 'Destroy', agent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
 <% if account_signed_in? %>
    <%= link_to 'New Agent', new_agent_path, class: 'button' %>
 <% end %>
</div>